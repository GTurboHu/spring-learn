<?xml version="1.0" encoding="UTF-8"?>
<!-- 最基本的命名空间定义和空间装载 -->
<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
https://www.springframework.org/schema/context/spring-context.xsd">


	<!--<constructor-arg index="" ref=""/>这是构造器注入模式，循环依赖无法解决，只能抛出异常	-->
	<bean id="testE" class="com.gth.learnspring.TestE">
		<constructor-arg index="0" ref="testF"></constructor-arg>
	</bean>
	<bean id="testF" class="com.gth.learnspring.TestF">
		<constructor-arg index="0" ref="testG"></constructor-arg>
	</bean>
	<bean id="testG" class="com.gth.learnspring.TestG">
		<constructor-arg index="0" ref="testE"></constructor-arg>
	</bean>

</beans>
